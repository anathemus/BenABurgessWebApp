@model IEnumerable<BABurgessWebApp.Models.Financial>

@{
    ViewBag.Title = "CS50 Financial - Account";
}

<br />
<h2 class="financial-header">CS50 Financial - Account</h2>

<span class="btn btn-outline-success">
    @Html.ActionLink("Create New", "Create")
</span>
<content class="financial-content">
    <table class="table financial-table">
        <tr class="financial-table">
            <th class="financial-table">
                @Html.DisplayNameFor(model => model.Symbol)
            </th>
            <th class="financial-table">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="financial-table">
                @Html.DisplayNameFor(model => model.Shares)
            </th>
            <th class="financial-table">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th class="financial-table">
                @Html.DisplayNameFor(model => model.TOTAL)
            </th>
            <th class="financial-table"></th>
        </tr>

@foreach (var item in Model) {
        <tr class="financial-table">
            <td>
                @Html.DisplayFor(modelItem => item.Symbol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shares)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TOTAL)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}

    </table>
</content>